// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model Configuration {
  id                  Int                    @id @default(autoincrement())
  shopId              String                 @unique
  appId               String
  secretKey           String
  authToken           String? 
  orderManage         Boolean  @default(false)
  sandboxManage       Boolean  @default(false)
  fullOrderManage     Boolean  @default(false)
  productsManagement  Boolean  @default(false)
  debugManagement     Boolean  @default(false)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

model ImportedProducts {
  id                       Int                    @id @default(autoincrement())
  shopId                   String                 
  product_id               BigInt                 @unique
  name                     String
  sku                      String                 @unique
  wholesale_price          Float
  mrp_price                Float
  stock                    Int
  supplier                 String
  supplier_product_id      Int                     @unique
  picture                  String
  createdAt                DateTime                @default(now())
  updatedAt                DateTime                @updatedAt
}

model OrderLog {
  id         Int                    @id @default(autoincrement())
  shopId     String                 
  order_id   String
  product_id String
  sku        String
  quantity   Int
  createdAt  DateTime              @default(now())
  updatedAt  DateTime              @updatedAt
}

model DebugLog {
  id        Int                    @id @default(autoincrement())    
  shopId    String            
  type      String                 // "info", "warning", "success"
  message   String?                // Optional message
  url       String?                // API URL or endpoint
  createdAt DateTime               @default(now())
}

model OrderWebhook {
  id         Int      @id @default(autoincrement())
  shop       String
  orderId    String
  payload    Json
  createdAt  DateTime @default(now())

  @@index([shop, orderId])
}